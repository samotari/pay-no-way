<?xml version='1.0' encoding='utf-8'?>
<widget id="com.github.samotari.paynoway" version="{{version}}" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name short="{{shortName}}">{{name}}</name>
    <description>{{description}}</description>
    <icon src="src/images/favicon.png" />
    <access origin="*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="28"/>
        <icon density="mdpi" src="src/images/favicon/favicon-android-mdpi.png" />
        <icon density="hdpi" src="src/images/favicon/favicon-android-hdpi.png" />
        <icon density="xhdpi" src="src/images/favicon/favicon-android-xhdpi.png" />
        <icon density="xxhdpi" src="src/images/favicon/favicon-android-xxhdpi.png" />
        <icon density="xxxhdpi" src="src/images/favicon/favicon-android-xxxhdpi.png" />
    </platform>
    <plugin name="phonegap-plugin-barcodescanner" spec="7.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
    <plugin name="cordova-plugin-inappbrowser" spec="2.0.2" />
    <plugin name="cordova-plugin-network-information" spec="2.0.2" />
    <plugin name="cordova-plugin-ionic-keyboard" spec="2.1.3"/>
    <plugin name="cz.blocshop.socketsforcordova" spec="https://github.com/chill117/sockets-for-cordova.git" />
    <plugin name="cordova-android-support-gradle-release" spec="3.0.0">
        <variable name="ANDROID_SUPPORT_VERSION" value="26.+" />
    </plugin>
    <engine name="android" spec="7.1.4" />
</widget>
